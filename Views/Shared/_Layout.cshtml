<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DecaPlay Store</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" media="all" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">*@
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" media="all" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" media="all" />
    <link rel="stylesheet" href="~/css/flexslider.css" asp-append-version="true" media="all" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true" media="all" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" media="all" />
    <link rel="stylesheet" href="~/DecaPlayStore.styles.css" asp-append-version="true" />
    <link href="http://fonts.googleapis.com/css?family=Dosis:100,300,400,600,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300i,300,400,400i,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body>
   
        <!--Header-->
        <header class="header default">
            <div class=" left-part">
                <a class="logo scroll" href="#wrapper">
                <h2 class="mb-0 uppercase text-success">DecaPlay Store</h2>
                </a>
            </div>
            <div class="right-part">
                <nav class="main-nav">
                    <div class="toggle-mobile-but">
                        <a href="#" class="mobile-but">
                            <div class="lines"></div>
                        </a>
                    </div>
                    <ul class="main-menu list-inline">
                        <li>
                        <a class="scroll list-inline-item text-success" asp-controller="Home" asp-action="index"><i class="bi bi-house-fill"></i>Home</a>
                        </li>
                        <li>
                        <a class="scroll list-inline-item text-success" asp-controller="Store" asp-action="index"><i class="bi bi-shop-window"></i>Store</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
   
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DecaPlayStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.flexslider-min.js"></script>
    <script src="~/js/smoth-scroll.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.magnific-popup.min.js"></script>
    <script src="~/js/audio.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.countdown.min.js"></script>
    <script src="~/js/placeholder.min.js"></script>
    <script src="~/js/script.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
